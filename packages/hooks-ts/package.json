{
  "name": "hooks-ts",
  "private": false,
  "version": "0.0.1",
  "description": "React hook library, written in Typescript.",
  "author": "Ifeanyi Oraelosi <ifeanyi@nanotome.com>",
  "homepage": "https://github.com/nanotome/hooks-ts",
  "keywords": [
    "typescript",
    "react",
    "hooks"
  ],
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm test:watch",
    "build": "pnpm wasmCopy && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p tsconfig.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.json --module esNext --outDir dist/esm --target es6",
    "clean": "rimraf -rf ./dist .turbo",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "types-check": "tsc --noEmit",
    "wasmCopy": "copyfiles -f ./node_modules/sql.js/dist/sql-wasm.wasm ./dist/cjs && copyfiles -f ./node_modules/sql.js/dist/sql-wasm.wasm ./dist/esm"
  },
  "devDependencies": {
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@types/sql.js": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "8.45.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-tree-shaking": "^1.10.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "sql.js": "1.8.0",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "react": "^16.9.0 || ^17.0.0 || ^18.2.0",
    "react-dom": "^16.9.0 || ^17.0.0 || ^18.2.0"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nanotome/hooks-ts"
  },
  "bugs": {
    "url": "https://github.com/nanotome/hooks-ts/issues"
  }
}
