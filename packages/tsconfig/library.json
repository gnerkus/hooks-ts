{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "lib": ["ESNEXT", "DOM"]
  },
  "exclude": ["node_modules", "dist"]
}
