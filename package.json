{
  "name": "hooks-ts",
  "private": false,
  "version": "0.0.1",
  "description": "React hook library for web APIs, written in Typescript",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm test:watch",
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "clean": "rimraf -rf ./dist .turbo",
    "types-check": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "react",
    "hooks"
  ],
  "author": "Ifeanyi Oraelosi <ifeanyi@nanotome.com>",
  "homepage": "https://github.com/nanotome/hooks-ts#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "18.2.15",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nanotome/hooks-ts"
  },
  "bugs": {
    "url": "https://github.com/nanotome/hooks-ts/issues"
  }
}
