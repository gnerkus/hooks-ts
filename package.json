{
  "name": "workspace",
  "private": true,
  "description": "Personal React hook library, written in Typescript",
  "author": "Ifeanyi Oraelosi <ifeanyi@nanotome.com>",
  "homepage": "https://github.com/nanotome/hooks-ts",
  "module": "true",
  "keywords": ["Typescript", "react", "hooks"],
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "types-check": "turbo run types-check",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nanotome/hooks-ts"
  },
  "bugs": {
    "url": "https://github.com/nanotome/hooks-ts/issues"
  },
  "packageManager": "pnpm@7.15.0"
}
